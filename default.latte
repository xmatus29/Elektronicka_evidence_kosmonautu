{block content}

<div class="container text-center">
  <div class="jumbotron">
    <h1 n:block="title">Elektronická evidence kosmonautů</h1>     
  </div>   
</div>

<div class="container">
<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
</div>

<div class="container">
<button id="cosmo_form" onclick="VisibilityChange()" class="btn-block btn-primary">Přidat kosmonauta</button>
<br>
</div>

<div id="insert_cosmo" class="container" style="display:none">		
<form n:name=insertForm class=form>
  <div class="form-group">
    <label for="surname">Příjmení</label>
    <input n:name=prijmeni class="form-control" id="surname" aria-describedby="emailHelp" placeholder="Zadejte příjmení">
  </div>
  <div class="form-group">
    <label for="name">Jméno</label>
    <input n:name=jmeno class="form-control" placeholder="Zadejte jméno">
  </div>
  <div class="form-group">
    <label for="date">Datum narození</label>
    <input n:name=datum_narozeni class="form-control" placeholder="dd.mm.rrrr">
  </div>
  <div class="form-group">
    <label for="superpower">Superschopnost</label>
    <input n:name=superschopnost class="form-control" placeholder="Zadejte superschopnost">
  </div>
  <button n:name=send type="submit" class="btn btn-success">Vložit kosmonauta</button>
</form>
<br>
</div>	
	
	
	
<div class="container">
	<table class="table table-striped">
	<thead>
      <tr>
        <th>Příjmení</th>
        <th>Jméno</th>
        <th>Datum narození</th>
		<th>Superschopnost</th>
		<th></th>
      </tr>
    </thead>
	<tbody>
    {foreach $kosmonauti as $kosmonaut}
	<tr>
	<td>
		{$kosmonaut->prijmeni}
	</td>	
	<td>
		{$kosmonaut->jmeno}
	</td>	
	<td>
		{$kosmonaut->datum_narozeni->format('Y-m-d')}
	</td>	
	<td>
		{$kosmonaut->superschopnost}
	</td>
	<td>
		<a n:href="smazatKosmonauta! $kosmonaut->id">
			<img src="data:image/svg+xml;utf8;base64," />
		</a>
	</td>
	</tr>
    {/foreach}
	</tbody>
	</table>	
</div>
	
{/block}